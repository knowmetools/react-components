{
  "name": "@knowmetools/react-components",
  "version": "0.0.0",
  "description": "A collection of reusable React components for Know Me's web apps.",
  "main": "build/index.js",
  "repository": "https://github.com/knowmetools/react-components",
  "author": "Chathan Driehuys <chathan@knowmetools.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --progress --colors",
    "lint": "tslint -p . && eslint .",
    "storybook": "start-storybook -p 8000 -c .storybook",
    "test": "jest",
    "test:watch": "yarn run test --watch"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test.*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": ["<rootDir>/testShims.js", "<rootDir>/testSetup.ts"],
    "setupTestFrameworkScriptFile": "<rootDir>/setupTestFramework.ts",
    "testRegex": "(/__test__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "devDependencies": {
    "@storybook/react": "^3.2.16",
    "@types/enzyme": "^3.1.5",
    "@types/jest": "^21.1.8",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/storybook__react": "^3.0.5",
    "awesome-typescript-loader": "^3.4.0",
    "codecov": "^3.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "jest-styled-components": "^4.9.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-test-renderer": "^16.1.1",
    "styled-components": "^2.2.3",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "peerDependencies": {
    "react": "^16.1.1",
    "styled-components": "^2.2.3"
  }
}
